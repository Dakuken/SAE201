{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-restricted-globals":0, // a remove pour les console.log()
        "consistent-return": 0,
        "no-return-assign": 0,
        "prefer-const": 0,
        "no-param-reassign": 0,
        "block-scoped-var": 0,
        "no-use-before-define": 0,
        "no-undef": 0,
        "no-unused-vars": 0,
        "no-plusplus": 0,
        "no-var": 0,
        "vars-on-top": 0,
        "indent": [
            "error",
            4
        ],
        "max-classes-per-file": [
            "error",
            2
        ],
        "no-new":0,
        "import/no-unresolved":0,
        "import/extensions":0,
        "no-console": "off",
        "no-mixed-spaces-and-tabs": 0,
        "linebreak-style": 0,
        "class-methods-use-this": 0,
        "space-unary-ops": [
            2,
            {
                "words": true,
                "nonwords": true,
                "overrides": {
                    "new": true,
                    "++": true
                }
            }
        ]
    }
}